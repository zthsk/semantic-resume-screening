# LLM Provider Configuration
# Choose one: "groq" or "local"
RESUME_PROVIDER=groq

# Groq API Configuration
# Get your API key from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# Groq Model Configuration
# Available models: llama3-8b-8192, mixtral-8x7b-32768, gemma2-9b-it
RESUME_GROQ_MODEL=llama3-8b-8192
RESUME_GROQ_MAX_TOKENS=500
RESUME_GROQ_TEMPERATURE=0.3

# Local Model Configuration (if using local provider)
# Path to your local model directory
RESUME_LOCAL_MODEL_PATH=/path/to/your/local/model
RESUME_LOCAL_DEVICE=cpu  # "cpu" or "cuda"
RESUME_LOCAL_MAX_TOKENS=500
RESUME_LOCAL_TEMPERATURE=0.3
